# Application Configuration
APP_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/golang_base?sslmode=disable

# Individual Database Components (for secure credential management)
# These variables allow for better secret management in production
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=golang_base
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random

# Security Configuration
ALLOWED_ORIGINS=*
RATE_LIMIT=100
RATE_LIMIT_WINDOW=1m
SESSION_TIMEOUT=24h
BCRYPT_COST=12

# Development Settings
DEBUG=true
LOG_LEVEL=info